<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.jobdetails.JobDetailsFragment">

    <TextView
        android:id="@+id/tvJobTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Job Title Here"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJobTitle" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutDescription="@xml/fragment_job_details_scene">

            <TextView
                android:id="@+id/tvJobBasicsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/job_details_title"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/imviewProfilePic"
                app:layout_constraintTop_toBottomOf="@+id/tvRatingTitle" />

            <TextView
                android:id="@+id/tvDestinationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/destination_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPickUpPointTitle" />

            <TextView
                android:id="@+id/tvPickUpPointTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/pick_up_point_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider5" />

            <TextView
                android:id="@+id/tvPickUpPointText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Pick Up Point Here"
                app:layout_constraintStart_toEndOf="@+id/tvPickUpPointTitle"
                app:layout_constraintTop_toTopOf="@+id/tvPickUpPointTitle" />

            <TextView
                android:id="@+id/tvDestinationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Destination Here"
                app:layout_constraintStart_toEndOf="@+id/tvDestinationTitle"
                app:layout_constraintTop_toTopOf="@+id/tvDestinationTitle" />

            <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvJobBasicsTitle" />

            <TextView
                android:id="@+id/tvNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/name_title"
                app:layout_constraintStart_toEndOf="@+id/imviewProfilePic"
                app:layout_constraintTop_toTopOf="@+id/imviewProfilePic" />

            <ImageView
                android:id="@+id/imviewProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvPacakageSizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/package_size_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDestinationTitle" />

            <TextView
                android:id="@+id/tvPaymentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/payment_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPacakageSizeTitle" />

            <TextView
                android:id="@+id/tvPackageSizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="PackageSizeLarge"
                app:layout_constraintStart_toEndOf="@+id/tvPacakageSizeTitle"
                app:layout_constraintTop_toTopOf="@+id/tvPacakageSizeTitle" />

            <TextView
                android:id="@+id/tvPaymentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="12 000 000 JMF"
                app:layout_constraintStart_toEndOf="@+id/tvPaymentTitle"
                app:layout_constraintTop_toTopOf="@+id/tvPaymentTitle" />

            <fragment
                class="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/mapViewOnDetails"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIsItAcceptedStatusText" />

            <TextView
                android:id="@+id/tvIsItAcceptedStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Not Yet Accepted v. Accepted on DÃ¡tum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOfferExpiresTitle" />

            <TextView
                android:id="@+id/tvDeliveryDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/delivery_deadline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentTitle" />

            <TextView
                android:id="@+id/tvDeadlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Deadline here"
                app:layout_constraintStart_toEndOf="@+id/tvDeliveryDateTitle"
                app:layout_constraintTop_toTopOf="@+id/tvDeliveryDateTitle" />

            <TextView
                android:id="@+id/tvEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/email_title"
                app:layout_constraintStart_toStartOf="@+id/tvNameTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvNameTitle" />

            <TextView
                android:id="@+id/tvRatingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/user_rating_title"
                app:layout_constraintStart_toStartOf="@+id/tvEmailTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailTitle" />

            <TextView
                android:id="@+id/tvNameTextOnJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="User Name Goes Here"
                app:layout_constraintStart_toEndOf="@+id/tvNameTitle"
                app:layout_constraintTop_toTopOf="@+id/tvNameTitle" />

            <TextView
                android:id="@+id/tvEmailTextOnJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="User Email Goes Here"
                app:layout_constraintStart_toEndOf="@+id/tvEmailTitle"
                app:layout_constraintTop_toTopOf="@+id/tvEmailTitle" />

            <TextView
                android:id="@+id/tvUserRatingTextOnJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="User Rating Goes Here"
                app:layout_constraintStart_toEndOf="@+id/tvRatingTitle"
                app:layout_constraintTop_toTopOf="@+id/tvRatingTitle" />

            <TextView
                android:id="@+id/tvOfferExpiresTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/listing_expires_on"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDeliveryDateTitle" />

            <TextView
                android:id="@+id/tvExpirationDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="ExpirationDateHere"
                app:layout_constraintStart_toEndOf="@+id/tvOfferExpiresTitle"
                app:layout_constraintTop_toTopOf="@+id/tvOfferExpiresTitle" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerOnDetails"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapViewOnDetails"
                tools:layout="@layout/fragment_accept_job" />

        </androidx.constraintlayout.motion.widget.MotionLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>